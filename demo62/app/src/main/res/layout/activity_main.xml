<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity回调机制示例"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_open_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通方式打开SecondActivity"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_open_for_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用startActivityForResult打开"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_open_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开设置（模拟回调接口）"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回调结果展示区域"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂无数据"
            android:padding="12dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_settings_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置结果: 暂无"
            android:padding="12dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生命周期日志查看Logcat"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="32dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
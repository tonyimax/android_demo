<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:background="#F5F5F5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区选择器示例"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:textColor="#333333"/>

        <Button
            android:id="@+id/btn_select_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择地区"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/tv_selected_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请先初始化数据，然后选择地区"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="#333333"
            android:elevation="2dp"/>

        <TextView
            android:id="@+id/tv_region_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:textColor="#666666"
            android:elevation="1dp"/>

        <Button
            android:id="@+id/btn_init_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="从JSON文件初始化数据"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn_init_test_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="初始化测试数据"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
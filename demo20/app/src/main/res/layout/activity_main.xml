<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        tools:context=".MainActivity">

        <!-- 当前进度显示 -->
        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前进度: 50"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- 基本 SeekBar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本 SeekBar"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/seekBarBasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="32dp"/>

        <!-- 自定义样式的 SeekBar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义样式 SeekBar"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/seekBarCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:progress="100"
            android:progressTint="#FF5722"
            android:progressBackgroundTint="#BDBDBD"
            android:thumbTint="#FF5722"
            android:layout_marginBottom="32dp"/>

        <!-- 带左右标签的 SeekBar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:layout_marginRight="8dp"/>

            <SeekBar
                android:id="@+id/seekBarWithLabels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="25"/>

            <TextView
                android:id="@+id/tvMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>

        <!-- 音量控制示例 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音量控制"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_lock_silent_mode"
                android:layout_marginRight="8dp"/>

            <SeekBar
                android:id="@+id/seekBarVolume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="10"
                android:progress="5"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>

        <!-- 进度值显示 -->
        <TextView
            android:id="@+id/tvVolumeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音量: 5"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <!-- 步进控制的 SeekBar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="步进控制 (每步10)"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/seekBarStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"/>

        <TextView
            android:id="@+id/tvStepValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前值: 50"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <!-- 重置按钮 -->
        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置所有 SeekBar"
            android:layout_marginTop="32dp"
            android:padding="12dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Standard Activity"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/button_open_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开新的Standard"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/button_open_single_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开SingleTop"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/button_open_single_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开SingleTask"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/button_open_single_instance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开SingleInstance"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"/>

</LinearLayout>